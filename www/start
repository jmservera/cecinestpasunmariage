#!/bin/bash
source .env

hugo --printI18nWarnings | grep i18n

# check if first parameter is "prod"

if [ "$1" == "prod" ]; then
    echo "Starting staging server"
    run="hugo server -e staging -p 1313 --disableFastRender --renderToDisk"
else
    echo "Starting development server"
    run="hugo server -e development -D -p 1313"
fi

swa start http://localhost:1313 --run "$run" -V --data-api-location "../swa-db-connections" --api-location ../functions
